<% include partials/head.ejs %>
<% include partials/header.ejs %>
<main>
  <h2>Dit zijn de <% if (currentUser.preference.genderPref === 'female') { %>
    <%= 'dames' %>
  <% } else { %>
    <%= 'heren' %>
  <% } %> die wij voor jou hebben gevonden:</h2>
  <section class="list-container">
    <% if (error) { %>
      <h3> <%= error %> </h3>
    <% } %>
    <% if (user) { %>
      <% for (var i = 0; i < user.length; i++) { %>
        <a href="/<%= user[i]._id %>">
          <div class="list-result">
            <div class="smallimg-container">
              <img src="<%if(user[i].userPhoto){%><%='/image/profilepic/'+user[i].userPhoto%><%}else{%><%='/image/default.png'%><%}%>" alt="No picture here">
            </div>
            <h3><%= user[i].firstname %></h3>
            <p>Leeftijd: <%= user[i].age %></p>
          </div>
        </a>
      <% }
    } %>
  </section>
</main>
